<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="com.example.espage14.accelerometer.MainActivity"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_z">

        <TextView
            style="@style/TextView"
            android:id="@+id/Z_gravity_view"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/z"
        android:textSize="@dimen/text_size"
        android:layout_alignTop="@+id/linearLayout_z"
        android:layout_toEndOf="@+id/linearLayout_z"
        android:id="@+id/textViewZ"
        android:textColor="@color/TextColor"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_x"

        android:layout_above="@+id/linearLayout_y"
        android:layout_alignStart="@+id/linearLayout_y"
        android:layout_marginBottom="1dp">

        <TextView
            style="@style/TextView"
            android:id="@+id/X_gravity_view"
        />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x"
        android:textSize="@dimen/text_size"
        android:layout_alignTop="@+id/linearLayout_x"
        android:layout_toEndOf="@+id/linearLayout_x"
        android:id="@+id/textViewX"
        android:textColor="@color/TextColor"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_y"
        android:layout_above="@+id/linearLayout_z"
        android:layout_alignStart="@+id/linearLayout_z"
        android:layout_marginBottom="1dp"
        >
        <TextView
            style="@style/TextView"
            android:id="@+id/Y_gravity_view"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/y"
        android:textSize="@dimen/text_size"
        android:layout_alignTop="@+id/linearLayout_y"
        android:layout_toEndOf="@+id/linearLayout_y"
        android:id="@+id/textViewY"
        android:textColor="@color/TextColor"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/gps_lat"
        android:layout_below="@id/linearLayout_z"
        android:layout_alignStart="@id/linearLayout_z"
        android:paddingTop="10dp"
        >

        <TextView
            style="@style/TextView"
            android:id="@+id/Lat"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lat"
        android:textSize="@dimen/text_size"
        android:id="@+id/textLat"
        android:layout_alignBottom="@+id/gps_lat"
        android:layout_toEndOf="@+id/gps_lat"
        android:textColor="@color/TextColor"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/gps_long"
        android:layout_below="@id/gps_lat"
        android:layout_alignStart="@id/gps_lat"
        android:paddingTop="1dp">

        <TextView
            style="@style/TextView"
            android:id="@+id/Long"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lon"
        android:textSize="@dimen/text_size"
        android:id="@+id/textLong"
        android:layout_alignBottom="@+id/gps_long"
        android:layout_toEndOf="@+id/gps_long"
        android:textColor="@color/TextColor"/>



</RelativeLayout>
